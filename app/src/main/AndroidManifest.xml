<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.remainder.evernote" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon5"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Add_Remainder"
            android:label="@string/title_activity_add__remainder" >
        </activity>
        <activity
            android:name=".RemainderView"
            android:label="@string/title_activity_remainder_view" >
        </activity>
        <activity
            android:name=".ReminderDisplay"
            android:label="@string/title_activity_reminder_display"
            android:parentActivityName=".Add_Remainder" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.remainder.evernote.Add_Remainder" />
        </activity>
    </application>

</manifest>
